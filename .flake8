[flake8]
# Maximum line length for PEP8 compliance
max-line-length = 88

# Exclude specific directories from linting
exclude =
    .git,
    __pycache__,
    build,
    dist,
    .venv,
    venv,
    env,
    *.egg-info,
    .tox,
    .mypy_cache,
    .pytest_cache,
    cov_html

# Ignore specific error codes
ignore =
    E203,  # Whitespace before ':', often clashes with black's formatting
    E266,  # Too many leading '#' for block comments
    E501,  # Line length, already set by max-line-length
    W503,  # Line break before binary operator, PEP8 change
    F403,  # Import * used; can be ignored in certain contexts
    F405,  # Name may be undefined, or defined from import * used

# Select specific error codes (Optional, if you want to enforce certain checks only)
# select =
#     E, W, F

# Enable type hints checking (Optional)
# enable-extensions = H102, H103
